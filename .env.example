# Configuración de la base de datos
DATABASE_URL=your_postgresql_connection_string

# Configuración de la sesión
SESSION_SECRET=your_secret_key_here_change_this_in_production

# Configuración de SendGrid (para envío de emails)
# Obtén tu API key en: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# URL de la aplicación (para links en emails)
APP_URL=http://localhost:5000

# Puerto del servidor
PORT=5000

# Google Cloud Storage (opcional)
# GCS_BUCKET_NAME=your_bucket_name
# GCS_PROJECT_ID=your_project_id
# GCS_CREDENTIALS_PATH=./path/to/credentials.json
